<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- List preference for time or distance choice -->
    <PreferenceCategory android:title="@string/time_distance_title" >
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/time_distance_list_titles"
            android:entryValues="@array/time_distance_list_values"
            android:key="time_distance_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/time_distance_title"
            android:summary="%s" />
    </PreferenceCategory>

    <!-- Checkboxes for the different gas stations -->
    <PreferenceCategory
        android:key="stations_list"
        android:title="@string/gas_stations_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="preem_checkbox"
            android:summary="@string/preem_summary"
            android:title="@string/preem_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="st1_checkbox"
            android:summary="@string/st1_summary"
            android:title="@string/st1_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="shell_checkbox"
            android:summary="@string/shell_summary"
            android:title="@string/shell_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="gas_checkbox"
            android:summary="@string/natural_gas_summary"
            android:title="@string/natural_gas_title" />
    </PreferenceCategory>

</PreferenceScreen>